const ListingDetailsPage: React.FC<{ onBook: (l: Listing) => void }> = ({ onBook }) => {
  const { id } = useParams();
  const { user } = useAuth();
  const navigate = useNavigate();
  const [listing, setListing] = useState<Listing | null>(null);
  const [reviews, setReviews] = useState<Review[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  
  const [rating, setRating] = useState(5);
  const [comment, setComment] = useState('');
  const [isSubmittingReview, setIsSubmittingReview] = useState(false);

  useEffect(() => {
    if (id) {
      const loadData = async () => {
        try {
          const [l, r] = await Promise.all([
            fetchListingById(id),
            fetchReviews(id)
          ]);
          setListing(l);
          setReviews(r);
        } catch (e) {
          console.error("Error loading details", e);
        } finally {
          setIsLoading(false);
        }
      };
      loadData();
    }
  }, [id]);

  const handleSubmitReview = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!user || !id) return;
    setIsSubmittingReview(true);
    await createReview(id, user.id, rating, comment);
    const updatedReviews = await fetchReviews(id);
    setReviews(updatedReviews);
    setComment('');
    setIsSubmittingReview(false);
  };

  const handleContactVendor = () => {
    if (!user) {
      navigate('/login');
      return;
    }
    if (listing && listing.vendorId) {
      navigate('/inbox', { state: { recipientId: listing.vendorId } });
    }
  };

  const getYouTubeEmbedUrl = (url: string) => {
    if (!url) return null;
    const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
    const match = url.match(regExp);
    return (match && match[2].length === 11)
      ? `https://www.youtube.com/embed/${match[2]}?origin=${window.location.origin}&rel=0`
      : null;
  };

  const isYoutubeUrl = (url: string) => {
    return url.includes('youtube.com') || url.includes('youtu.be');
  };

  if (isLoading) return <div className="h-screen flex items-center justify-center"><Loader2 className="w-10 h-10 animate-spin text-teal-600" /></div>;
  if (!listing) return <div className="h-screen flex items-center justify-center">Listing not found</div>;

  const embedUrl = isYoutubeUrl(listing.videoUrl || '') ? getYouTubeEmbedUrl(listing.videoUrl || '') : null;
  const scheduleDisplay = listing.operatingDays.length === 7 ? "Daily" : listing.operatingDays.join(', ');

  return (
    <div className="min-h-screen bg-gray-50 pb-20 pt-20">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-6">
         {/* Header & Title */}
         <div className="mb-8">
             <Link to="/" className="inline-flex items-center text-gray-500 hover:text-teal-600 mb-4 text-sm font-medium transition-colors"><ArrowLeft className="w-4 h-4 mr-1" /> Back to Search</Link>
             <div className="flex flex-col md:flex-row items-start md:items-end justify-between gap-4">
               <div>
                 <h1 className="text-3xl md:text-4xl font-bold text-gray-900 mb-3 leading-tight">{listing.title}</h1>
                 <div className="flex flex-wrap items-center gap-4 text-sm">
                   <span className="flex items-center gap-1.5 text-gray-600"><MapPin className="w-4 h-4 text-teal-600" /> {listing.location}</span>
                   <span className="flex items-center gap-1.5 text-gray-900 font-medium"><Star className="w-4 h-4 fill-yellow-400 text-yellow-400" /> {listing.rating} <span className="text-gray-500 font-normal">({listing.reviewCount} reviews)</span></span>
                   <span className="px-3 py-1 bg-teal-50 text-teal-700 rounded-full text-xs font-semibold uppercase tracking-wide">{listing.category}</span>
                 </div>
               </div>
             </div>
         </div>

        {/* Bento Grid Gallery */}
         <div className="grid grid-cols-1 md:grid-cols-4 gap-2 h-[50vh] md:h-[60vh] rounded-3xl overflow-hidden mb-10">
            <div className="md:col-span-2 md:row-span-2 relative group cursor-pointer">
                <img src={listing.imageUrl} className="w-full h-full object-cover" alt="Main" />
                <div className="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors" />
            </div>
            {listing.galleryUrls && listing.galleryUrls.slice(0, 4).map((url, idx) => (
                <div key={idx} className={`relative group cursor-pointer ${idx === 2 ? 'md:row-span-2' : ''}`}>
                     <img src={url} className="w-full h-full object-cover" alt={`Gallery ${idx}`} />
                     <div className="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors" />
                </div>
            ))}
            {/* Fallback if no gallery */}
            {(!listing.galleryUrls || listing.galleryUrls.length === 0) && (
                 <div className="bg-gray-100 flex items-center justify-center text-gray-400">
                    <ImageIcon className="w-8 h-8" />
                 </div>
            )}
         </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-12">
          {/* Left Column: Content */}
          <div className="lg:col-span-2 space-y-10">
             <div className="prose prose-lg max-w-none text-gray-600">
                <h2 className="text-2xl font-bold text-gray-900 mb-4">About this activity</h2>
                <p className="leading-relaxed whitespace-pre-line">{listing.description}</p>
             </div>
             
             <div className="grid grid-cols-2 md:grid-cols-4 gap-6 py-8 border-y border-gray-100">
                <div className="space-y-1">
                    <span className="text-xs uppercase tracking-wider text-gray-400 font-bold">Hosted By</span>
                    <p className="font-medium text-gray-900">{listing.vendorName}</p>
                </div>
                <div className="space-y-1">
                    <span className="text-xs uppercase tracking-wider text-gray-400 font-bold">Duration</span>
                    <p className="font-medium text-gray-900">{listing.duration}</p>
                </div>
                 <div className="space-y-1">
                    <span className="text-xs uppercase tracking-wider text-gray-400 font-bold">Max Guests</span>
                    <p className="font-medium text-gray-900">{listing.maxCapacity}</p>
                </div>
                 <div className="space-y-1">
                    <span className="text-xs uppercase tracking-wider text-gray-400 font-bold">Schedule</span>
                    <p className="font-medium text-gray-900">{scheduleDisplay}</p>
                </div>
             </div>

             {listing.videoUrl && (
               <div>
                  <h2 className="text-2xl font-bold text-gray-900 mb-6">Video Tour</h2>
                  <div className="aspect-video rounded-2xl overflow-hidden bg-black shadow-2xl">
                     {embedUrl ? (
                        <iframe 
                           src={embedUrl} 
                           title="Excursion Video"
                           className="w-full h-full"
                           allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                           allowFullScreen
                        />
                     ) : (
                        <video controls className="w-full h-full">
                           <source src={listing.videoUrl} />
                           Your browser does not support the video tag.
                        </video>
                     )}
                  </div>
               </div>
             )}

             <div>
                <div className="flex items-center justify-between mb-8">
                  <h2 className="text-2xl font-bold text-gray-900">Guest Reviews</h2>
                  <div className="flex items-center gap-2">
                     <Star className="w-6 h-6 fill-yellow-400 text-yellow-400" />
                     <span className="text-2xl font-bold text-gray-900">{listing.rating}</span>
                     <span className="text-gray-500">/ 5.0</span>
                  </div>
                </div>

                {user && (
                  <form onSubmit={handleSubmitReview} className="mb-10 bg-white p-6 rounded-2xl border border-gray-100 shadow-sm">
                    <h3 className="text-sm font-bold text-gray-900 mb-4 uppercase tracking-wide">Write a Review</h3>
                    <div className="mb-4 flex items-center gap-2">
                       {[1,2,3,4,5].map(s => (
                         <button key={s} type="button" onClick={()=>setRating(s)} className="transition-transform hover:scale-110">
                            <Star className={`w-8 h-8 ${s <= rating ? 'fill-yellow-400 text-yellow-400' : 'text-gray-200'}`} />
                         </button>
                       ))}
                    </div>
                    <textarea 
                      value={comment}
                      onChange={(e) => setComment(e.target.value)}
                      placeholder="Share your experience with other travelers..."
                      className="w-full p-4 rounded-xl border border-gray-200 bg-gray-50 text-gray-900 text-sm mb-4 focus:ring-2 focus:ring-teal-500 outline-none transition-all"
                      rows={3}
                      required
                    />
                    <button type="submit" disabled={isSubmittingReview} className="px-6 py-3 bg-gray-900 text-white text-sm font-bold rounded-xl hover:bg-teal-600 transition-colors disabled:opacity-50 shadow-lg">
                       {isSubmittingReview ? 'Posting...' : 'Post Review'}
                    </button>
                  </form>
                )}

                <div className="space-y-8">
                  {reviews.length > 0 ? reviews.map(review => (
                    <div key={review.id} className="flex gap-4">
                       <div className="w-10 h-10 rounded-full bg-gradient-to-br from-teal-400 to-cyan-500 flex items-center justify-center text-white font-bold shadow-sm flex-shrink-0">
                          {review.userName.charAt(0)}
                       </div>
                       <div>
                           <h4 className="font-bold text-gray-900">{review.userName}</h4>
                           <div className="flex items-center gap-2 mb-2">
                               <div className="flex">
                                  {[...Array(review.rating)].map((_, i) => (
                                    <Star key={i} className="w-3 h-3 fill-yellow-400 text-yellow-400" />
                                  ))}
                               </div>
                               <span className="text-xs text-gray-400">• {review.createdAt}</span>
                           </div>
                           <p className="text-gray-600 text-sm leading-relaxed">{review.comment}</p>
                       </div>
                    </div>
                  )) : (
                    <div className="text-center py-12 bg-gray-50 rounded-2xl border-dashed border-2 border-gray-200">
                        <MessageSquare className="w-8 h-8 text-gray-300 mx-auto mb-2" />
                        <p className="text-gray-500">No reviews yet. Be the first to share your thoughts!</p>
                    </div>
                  )}
                </div>
             </div>
          </div>

          {/* Right Column: Booking Card */}
          <div className="lg:col-span-1">
             <div className="sticky top-28 bg-white rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] p-6 md:p-8 border border-gray-100">
                <div className="flex items-end justify-between mb-8">
                   <div>
                      <p className="text-sm text-gray-400 line-through font-medium">${listing.price + 15}</p>
                      <div className="flex items-baseline gap-1">
                        <span className="text-4xl font-bold text-gray-900 tracking-tight">${listing.price}</span>
                        <span className="text-gray-500 font-medium">/ person</span>
                      </div>
                   </div>
                   <div className="flex items-center gap-1 text-xs font-bold bg-red-50 text-red-600 px-3 py-1.5 rounded-full uppercase tracking-wide">
                      <TrendingUp className="w-3 h-3" /> Best Price
                   </div>
                </div>

                <div className="space-y-4 mb-8">
                   <div className="flex items-center gap-3 text-sm text-gray-600 bg-gray-50 p-3 rounded-xl">
                      <Calendar className="w-5 h-5 text-teal-600" /> <span>Free cancellation (24h)</span>
                   </div>
                   <div className="flex items-center gap-3 text-sm text-gray-600 bg-gray-50 p-3 rounded-xl">
                      <CheckCircle className="w-5 h-5 text-teal-600" /> <span>Instant Confirmation</span>
                   </div>
                </div>

                <button 
                  onClick={() => onBook(listing)}
                  className="w-full py-4 bg-gray-900 hover:bg-teal-600 text-white font-bold text-lg rounded-2xl shadow-xl transition-all transform hover:-translate-y-1 active:scale-[0.98]"
                >
                  Check Availability
                </button>
                
                {user?.id !== listing.vendorId && (
                  <button 
                    onClick={handleContactVendor}
                    className="w-full mt-4 py-3 text-gray-600 font-semibold text-sm hover:bg-gray-50 rounded-xl transition-colors flex items-center justify-center gap-2"
                  >
                     <MessageSquare className="w-4 h-4" /> Ask Vendor a Question
                  </button>
                )}
             </div>
          </div>
        </div>
      </div>
    </div>
  );
};

// --- Vendor Dashboard ---
const VendorDashboard: React.FC<{ onAddListing: (l: Listing) => void }> = ({ onAddListing }) => {
  const { user, profile, loading } = useAuth();
  const navigate = useNavigate();
  const [activeTab, setActiveTab] = useState<'bookings' | 'listings' | 'calendar' | 'create'>('bookings');
  const [bookings, setBookings] = useState<Booking[]>([]);
  const [myListings, setMyListings] = useState<Listing[]>([]);
  const [isLoadingBookings, setIsLoadingBookings] = useState(false);
  const [isLoadingListings, setIsLoadingListings] = useState(false);
  
  // Calendar States
  const [calendarListing, setCalendarListing] = useState<string>('');
  const [currentMonth, setCurrentMonth] = useState(new Date());
  const [calendarBlocks, setCalendarBlocks] = useState<AvailabilityBlock[]>([]);
  const [calendarOccupancy, setCalendarOccupancy] = useState<{date: string, slot: TimeSlot, guests: number}[]>([]);
  const [isLoadingCalendar, setIsLoadingCalendar] = useState(false);
  const [importStatus, setImportStatus] = useState('');
  const [manualWalkInDate, setManualWalkInDate] = useState<string | null>(null);

  const [editingId, setEditingId] = useState<string | null>(null);
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [uploadStatus, setUploadStatus] = useState('');
  const [errorMsg, setErrorMsg] = useState<string | null>(null);
  
  const [formData, setFormData] = useState({
    title: '',
    description: '',
    price: '',
    location: LOCATIONS[0],
    category: ActivityCategory.WATER_SPORTS,
    duration: '',
    videoUrl: '',
    maxCapacity: 20,
    operatingDays: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
    latitude: 9.73,
    longitude: 100.01,
    externalIcalUrl: ''
  });

  const [mainImageFile, setMainImageFile] = useState<File | null>(null);
  const [mainImagePreview, setMainImagePreview] = useState<string | null>(null);
  const [existingMainImage, setExistingMainImage] = useState<string | null>(null);
  
  const [galleryFiles, setGalleryFiles] = useState<File[]>([]);
  const [galleryPreviews, setGalleryPreviews] = useState<string[]>([]);
  const [existingGallery, setExistingGallery] = useState<string[]>([]);

  const [videoFile, setVideoFile] = useState<File | null>(null);

  const DAYS_OF_WEEK = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];

  useEffect(() => {
     if (!loading && user && profile && profile.role !== 'vendor') {
         navigate('/');
     }
  }, [user, profile, loading, navigate]);

  useEffect(() => {
    if (!user) return;
    if (activeTab === 'bookings') loadBookings();
    if (activeTab === 'listings' || activeTab === 'calendar') loadMyListings();
  }, [activeTab, user]);

  useEffect(() => {
    if (activeTab === 'calendar' && myListings.length > 0 && !calendarListing) {
      setCalendarListing(myListings[0].id);
    }
  }, [activeTab, myListings]);

  useEffect(() => {
    if (activeTab === 'calendar' && calendarListing) {
       loadCalendarData();
    }
  }, [calendarListing, currentMonth]);

  const loadBookings = async () => {
    if (!user) return;
    setIsLoadingBookings(true);
    const data = await fetchVendorBookings(user.id);
    setBookings(data);
    setIsLoadingBookings(false);
  };

  const loadMyListings = async () => {
    if (!user) return;
    setIsLoadingListings(true);
    const data = await fetchVendorListings(user.id);
    setMyListings(data);
    setIsLoadingListings(false);
  };

  const loadCalendarData = async () => {
    if (!calendarListing) return;
    setIsLoadingCalendar(true);
    const monthStr = currentMonth.toISOString().slice(0, 7); // YYYY-MM
    const [blocks, occupancy] = await Promise.all([
      fetchListingBlocks(calendarListing, monthStr),
      fetchListingBookingsByMonth(calendarListing, monthStr)
    ]);
    setCalendarBlocks(blocks);
    setCalendarOccupancy(occupancy);
    setIsLoadingCalendar(false);
  };

  const handleBlockSlot = async (dayStr: string, slot: TimeSlot, isBlocked: boolean) => {
     if (isBlocked) {
        await unblockDate(calendarListing, dayStr, slot);
     } else {
        await blockDate(calendarListing, dayStr, slot);
     }
     loadCalendarData();
  };

  const handleAddWalkIn = async (guests: number, slot: TimeSlot) => {
      if (!manualWalkInDate || !calendarListing) return;
      const success = await createManualBooking(calendarListing, manualWalkInDate, guests, slot);
      if (success) {
          setManualWalkInDate(null);
          loadCalendarData();
      } else {
          alert("Failed to add walk-in. Check capacity.");
      }
  };

  const handleExportIcal = async () => {
     if (!calendarListing) return;
     const icsData = await generateIcalData(calendarListing);
     if (icsData) {
         const blob = new Blob([icsData], { type: 'text/calendar' });
         const url = URL.createObjectURL(blob);
         const a = document.createElement('a');
         a.href = url;
         a.download = `bookings-${calendarListing.slice(0,8)}.ics`;
         a.click();
     } else {
         alert("No future bookings to export.");
     }
  };

  const handleImportIcalFile = async (e: React.ChangeEvent<HTMLInputElement>) => {
      if (e.target.files && e.target.files[0] && calendarListing) {
          const file = e.target.files[0];
          const text = await file.text();
          setImportStatus("Syncing...");
          const { added } = await parseAndSyncIcal(calendarListing, text);
          setImportStatus(`Synced! ${added} days blocked.`);
          loadCalendarData();
      }
  };

  const renderCalendar = () => {
     const year = currentMonth.getFullYear();
     const month = currentMonth.getMonth();
     const firstDayOfMonth = new Date(year, month, 1);
     const daysInMonth = new Date(year, month + 1, 0).getDate();
     const startDay = firstDayOfMonth.getDay(); // 0 = Sun
     const days = [];
     
     for (let i = 0; i < startDay; i++) {
        days.push(<div key={`empty-${i}`} className="h-32 bg-gray-50/50"></div>);
     }

     const activeListing = myListings.find(l => l.id === calendarListing);
     const slots = activeListing ? getSlotsForDuration(activeListing.duration) : ['full_day'];
     const isSplitDay = slots.length > 1;

     for (let d = 1; d <= daysInMonth; d++) {
        const dateStr = `${year}-${String(month+1).padStart(2, '0')}-${String(d).padStart(2, '0')}`;
        const dateObj = new Date(dateStr + 'T00:00:00');
        const dayName = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'][dateObj.getDay()];
        const isOpDay = activeListing?.operatingDays.includes(dayName);
        
        days.push(
           <div key={d} className={`h-32 rounded-xl border border-gray-200 overflow-hidden relative ${!isOpDay ? 'bg-gray-100 opacity-50' : 'bg-white'}`}>
              <div className="absolute top-1 left-2 text-xs font-bold text-gray-500 z-10 flex justify-between w-full pr-4">
                 <span>{d}</span>
                 {isOpDay && <button onClick={() => setManualWalkInDate(dateStr)} className="text-teal-600 hover:underline text-[10px]">+ Walk-in</button>}
              </div>

              {/* Slots Grid */}
              <div className="h-full flex flex-col pt-6">
                 {slots.map(slot => {
                     const block = calendarBlocks.find(b => b.date === dateStr && (b.timeSlot === slot || b.timeSlot === 'full_day'));
                     const isBlocked = !!block;
                     const isSynced = block?.source === 'ical';
                     
                     // Calculate Guests for this slot
                     const guests = calendarOccupancy
                        .filter(o => o.date === dateStr && (o.slot === slot || o.slot === 'full_day'))
                        .reduce((sum, o) => sum + o.guests, 0);
                     
                     let bg = 'bg-white hover:bg-gray-50';
                     if (isSynced) bg = 'bg-purple-50';
                     else if (isBlocked) bg = 'bg-red-50';
                     else if (guests > 0) bg = 'bg-green-50';

                     return (
                        <div 
                            key={slot} 
                            onClick={() => isOpDay && handleBlockSlot(dateStr, slot as TimeSlot, isBlocked)}
                            className={`flex-1 flex items-center justify-between px-2 text-[10px] border-t border-gray-100 cursor-pointer transition-colors ${bg}`}
                        >
                            <span className="font-bold uppercase text-gray-400">{slot === 'full_day' ? 'All Day' : slot}</span>
                            {isSynced && <span className="text-purple-600 font-bold">Synced</span>}
                            {!isSynced && isBlocked && <span className="text-red-500 font-bold">Blocked</span>}
                            {!isBlocked && guests > 0 && <span className="text-green-600 font-bold">{guests} Guests</span>}
                        </div>
                     )
                 })}
              </div>
           </div>
        );
     }
     return days;
  };

  const initCreate = () => {
    setEditingId(null);
    setFormData({
      title: '', description: '', price: '', duration: '', 
      location: LOCATIONS[0], category: ActivityCategory.WATER_SPORTS,
      videoUrl: '', maxCapacity: 20, 
      operatingDays: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
      latitude: 9.73, longitude: 100.01, externalIcalUrl: ''
    });
    setMainImageFile(null);
    setMainImagePreview(null);
    setExistingMainImage(null);
    setGalleryFiles([]);
    setGalleryPreviews([]);
    setExistingGallery([]);
    setVideoFile(null);
    setActiveTab('create');
  };

  const handleEdit = (listing: Listing) => {
    setEditingId(listing.id);
    setFormData({
      title: listing.title, description: listing.description, price: listing.price.toString(),
      location: listing.location, category: listing.category, duration: listing.duration,
      videoUrl: listing.videoUrl || '', maxCapacity: listing.maxCapacity || 20,
      operatingDays: listing.operatingDays || ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
      latitude: listing.latitude || 9.73, longitude: listing.longitude || 100.01,
      externalIcalUrl: listing.externalIcalUrl || ''
    });
    setExistingMainImage(listing.imageUrl);
    setMainImagePreview(listing.imageUrl);
    setMainImageFile(null);
    setExistingGallery(listing.galleryUrls || []);
    setGalleryFiles([]);
    setGalleryPreviews([]);
    setActiveTab('create');
  };

  const handleMainImageChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    if (e.target.files && e.target.files[0]) {
      const file = e.target.files[0];
      setMainImageFile(file);
      setMainImagePreview(URL.createObjectURL(file));
    }
  };

  const handleGalleryChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    if (e.target.files) {
      const files = Array.from(e.target.files) as File[];
      setGalleryFiles(prev => [...prev, ...files]);
      const newPreviews = files.map(file => URL.createObjectURL(file));
      setGalleryPreviews(prev => [...prev, ...newPreviews]);
    }
  };

  const removeExistingGalleryImage = (urlToRemove: string) => {
    setExistingGallery(prev => prev.filter(url => url !== urlToRemove));
  };

  const removeNewGalleryFile = (index: number) => {
    setGalleryFiles(prev => prev.filter((_, i) => i !== index));
    setGalleryPreviews(prev => prev.filter((_, i) => i !== index));
  };

  const handleVideoChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    if (e.target.files && e.target.files[0]) {
       const file = e.target.files[0];
       setVideoFile(file);
       setFormData(prev => ({ ...prev, videoUrl: '' }));
    }
  };

  const toggleDay = (day: string) => {
    setFormData(prev => {
      const exists = prev.operatingDays.includes(day);
      let newDays = exists ? prev.operatingDays.filter(d => d !== day) : [...prev.operatingDays, day];
      return { ...prev, operatingDays: DAYS_OF_WEEK.filter(d => newDays.includes(d)) };
    });
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!user) return;
    setErrorMsg(null);
    if (!mainImageFile && !existingMainImage) { setErrorMsg("Please select a main cover image."); return; }
    if (formData.operatingDays.length === 0) { setErrorMsg("Please select at least one operating day."); return; }

    setIsSubmitting(true);
    setUploadStatus('Processing...');
    
    try {
      let mainImageUrl = existingMainImage || '';
      if (mainImageFile) {
        setUploadStatus('Uploading cover image...');
        const url = await uploadFile(mainImageFile, 'main');
        if (url) mainImageUrl = url;
      }

      const galleryUrls: string[] = [...existingGallery];
      if (galleryFiles.length > 0) {
        setUploadStatus(`Uploading ${galleryFiles.length} gallery images...`);
        // Parallel upload for speed
        const results = await Promise.all(galleryFiles.map(f => uploadFile(f, 'gallery')));
        results.forEach(url => { if(url) galleryUrls.push(url); });
      }

      let finalVideoUrl = formData.videoUrl;
      if (videoFile) {
        setUploadStatus('Uploading video...');
        const vidUrl = await uploadFile(videoFile, 'videos');
        if (vidUrl) finalVideoUrl = vidUrl;
      }

      setUploadStatus('Saving to database...');
      const listingPayload = {
        title: formData.title, description: formData.description, price: Number(formData.price),
        location: formData.location, category: formData.category as ActivityCategory,
        imageUrl: mainImageUrl, vendorName: profile?.fullName || 'Vendor',
        duration: formData.duration, videoUrl: finalVideoUrl, galleryUrls: galleryUrls,
        maxCapacity: formData.maxCapacity, operatingDays: formData.operatingDays,
        latitude: formData.latitude, longitude: formData.longitude,
        externalIcalUrl: formData.externalIcalUrl
      };

      if (editingId) {
        const updated = await updateListing(editingId, listingPayload);
        if (updated) { alert("Listing updated successfully!"); loadMyListings(); setActiveTab('listings'); }
        else throw new Error("Update failed.");
      } else {
        const createdListing = await createListing(listingPayload, user.id);
        if (createdListing) { onAddListing(createdListing); alert("Listing published!"); initCreate(); setActiveTab('listings'); }
        else throw new Error("Creation failed.");
      }
    } catch (err: any) {
      console.error(err);
      setErrorMsg(err.message || "An unknown error occurred.");
    } finally {
      setIsSubmitting(false);
      setUploadStatus('');
    }
  };

  if (loading) return <div className="h-screen flex items-center justify-center"><Loader2 className="w-8 h-8 animate-spin text-teal-500" /></div>;

  return (
    <div className="min-h-screen bg-gray-50 py-20">
